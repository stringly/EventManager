
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Custom.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body style="padding-top:0px; height:100%">
    <div class="container-fluid body-content" style="height:100%; background-color: #828a8a; padding:0px; background-size:cover">

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
            
            <div class="row">
                <div class="col-xs-12 col-sm-9">
                    <h1 class="display-2">PGPD Event Management</h1>                    
                </div>
                <div class="hidden-xs col-sm-3 text-right" style="display:inline-block; height:93px; line-height:93px">
                        <img src="@Url.Content("~/Resources/Images/Seal.png")" width="50" height="70" style="vertical-align:middle" />
                        <img src="@Url.Content("~/Resources/Images/SOD.png")" width="70" height="70" style="vertical-align:middle" />
                </div>
            </div>

            
            @*<a href="#" class="btn btn-primary btn-lg">Call to action!</a>*@
        </header>

        <!-- Page Features -->
        <div class="row text-center" style="height:60%">
            <div class="proj col-xs-3 col-md-2">
                <div class="well-card">
                    <img class="center-block img-responsive" style="width: 25%;" src="@Url.Content("~/Resources/Images/Working-Schedule.png")" alt="">
                    <div class="card-body">
                        <h4 class="card-title">View Events</h4>
                        <p class="card-text">View and Register for Events</p>
                    </div>
                    <div class="card-footer">
                        @if (User.IsInRole("User"))
                        {
                            <a href="/UserEventRegistration/Index" class="btn btn-primary btn-lg">Go!</a>
                        }
                        else
                        {
                            <a href="/UserInfo/Index" class="btn btn-danger btn-lg">Login Required!</a>
                        }
                    </div>
                </div>
            </div>

            <div class="proj col-xs-3 col-md-2">
                <div class="well-card">
                    <img class="center-block img-responsive" style="width: 25%" src="@Url.Content("~/Resources/Images/Documentation.png")" alt="">
                    <div class="card-body">
                        <h4 class="card-title">Create Events</h4>
                        <p class="card-text">Add or Manage Events</p>
                    </div>
                    <div class="card-footer">
                        @if (User.IsInRole("Administrator") || User.IsInRole("Development") || User.IsInRole("Approver"))
                        {
                            <a href="/Home/Index" class="btn btn-primary btn-lg">Go!</a>
                        }
                        else
                        {
                            <a href="" class="btn btn-danger btn-lg" style="cursor:not-allowed">Admin Account Required!</a>
                        }
                    </div>
                </div>
            </div>

            <div class="proj col-xs-3 col-md-2">
                <div class="well-card">
                    <img class="center-block img-responsive" style="width: 25%" src="@Url.Content("~/Resources/Images/employee-profile-icon_398760.png")" alt="">
                    <div class="card-body">
                        <h4 class="card-title">User Profile</h4>
                        <p class="card-text">View or Update User Information</p>
                    </div>
                    <div class="card-footer">
                        @if (User.IsInRole("User"))
                        {
                            <a href="/UserInfo/Index" class="btn btn-primary btn-lg">Go!</a>
                        }
                        else
                        {
                            <a href="/UserInfo/Index" class="btn btn-success btn-lg">Login Here!</a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <footer style="color:#fff; vertical-align:middle; border-top:solid; border-top-color: #3b4551; border-top-width: 5px; background-image:url(../Resources/Images/blue.jpg); min-height:10%">
            <div class="col-xs-12" style="height:100%">
                <h4>Welcome, @Html.ActionLink(Context.User.Identity.Name.Substring(Context.User.Identity.Name.LastIndexOf(@"\") + 1), "Index", "UserInfo")</h4>
            </div>
        </footer>

    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>

    </script>

</body>
</html>
