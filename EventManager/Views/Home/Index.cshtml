                    if (this.checked) {
                        $('#repeatMenu').show();
                    }
                    else {
                        $('#repeatMenu').hide();
                    }
                })
                $('#cboRepeat').on('change', function () {
                    switch (this.value) {
                        case '1':
                            $('#dayRepeat').show();
                            $('#startsOnDate').show();
                            $('#weekdayRepeat').hide();
                            $('#weekRepeat').hide();
                            $('#endsOnDate').hide();
                            break;
                        case '2':
                            $('#dayRepeat').hide();
                            $('#startsOnDate').show();
                            $('#weekdayRepeat').show();
                            $('#weekRepeat').hide();
                            $('#endsOnDate').show();
                            break;
