                                end: end,
                                minstaff: 1,
                                maxStaff: 1,
                                fundCenter: ''

                            };
                            console.log(selectedEvent);
                            openAddEditForm();
                            $('#calendar').fullCalendar('unselect');
                        }
                    })
                }
